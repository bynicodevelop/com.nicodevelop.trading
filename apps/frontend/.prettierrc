{
  "tabWidth": 2,
  "useTabs": false,
  "htmlWhitespaceSensitivity": "ignore",
  "printWidth": 80,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "tabWidth": 2,
        "useTabs": true,
        "htmlWhitespaceSensitivity": "strict",
        "printWidth": 80,
        "singleAttributePerLine": true
      }
    },
    {
      "files": "*.ts",
      "options": {
        "tabWidth": 2,
        "useTabs": true,
        "printWidth": 80,
        "trailingComma": "all"
      }
    }
  ]
}
